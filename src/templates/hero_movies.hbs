
{{#each this}}

<div class="movies-card">
    <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}" />

    <div class="description">
        <p class="description-title">    
            {{title}}
        </p>
<div class="description-genre-release-date">
            <p class="description-genre">
                {{genre_ids}}
            </p>
            <p class="description-release-date">
                {{release_date}}
            </p>
</div>
    </div>
</div>

{{/each}}
